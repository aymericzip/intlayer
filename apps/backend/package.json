{
  "name": "@intlayer/backend",
  "version": "3.0.3",
  "private": false,
  "description": "IntLayer Backend is a an application that allow you to manage your IntLayer content and interact with the intlayer editor.",
  "keywords": [
    "intlayer",
    "multilingual",
    "i18n",
    "internationalization",
    "backend",
    "types",
    "api"
  ],
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/export.d.ts",
      "require": "./dist/cjs/export.cjs",
      "import": "./dist/esm/export.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/export.cjs",
  "module": "dist/esm/export.mjs",
  "types": "dist/types/export.d.ts",
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "pnpm build:package & pnpm build:types",
    "build:package": "tsup",
    "build:types": "tsc --project ./tsconfig.types.json && tsc-alias --project ./tsconfig.types.json",
    "dev": "node --import=tsx --watch ./src/index.ts",
    "email": "email dev --dir ./src/emails",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "start": "node --import=tsx dist/esm/index.mjs"
  },
  "dependencies": {
    "@react-email/components": "^0.0.25",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csrf": "^3.1.0",
    "csrf-csrf": "^3.0.6",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-intlayer": "workspace:^",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.3",
    "oauth2-server": "^3.1.1",
    "react": "^18.3.1",
    "react-email": "^3.0.1",
    "resend": "^4.0.0",
    "stripe": "^17.3.1",
    "uuid": "^10.0.0",
    "validator": "^13.12.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@intlayer/core": "workspace:^",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.1.0",
    "@types/oauth2-server": "^3.0.18",
    "@types/react": "^18.3.3",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.0",
    "@utils/eslint-config": "workspace:^",
    "@utils/ts-config": "workspace:^",
    "@utils/ts-config-types": "workspace:^",
    "@utils/tsup-config": "workspace:^",
    "esbuild-fix-imports-plugin": "^1.0.5",
    "eslint": "^9.11.1",
    "intlayer": "workspace:^",
    "prettier": "3.3.3",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
