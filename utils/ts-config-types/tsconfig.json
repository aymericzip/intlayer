{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@utils/ts-config",
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "storybook-static",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**"
  ],
  "compilerOptions": {
    "strict": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noEmit": false,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist/types",
    "forceConsistentCasingInFileNames": true
  }
}