{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@utils/ts-config-types",
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["**/*.test.*"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@services/*": ["./services/*"],
      "@routes/*": ["./routes/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@schemas/*": ["./schemas/*"],
      "@utils/*": ["./utils/*"],
      "@/*": ["./*"]
    }
  }
}
