{
  "name": "intlayer",
  "version": "1.1.0",
  "private": false,
  "description": "IntLayer is a layer of abstraction between the business logic and the data access layer. Manage internationalization in a simple way, through TypeScript, JavaScript or JSON declaration file.",
  "keywords": [
    "intlayer",
    "application",
    "transpile",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "homepage": "https://github.com/aypineau/intlayer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aypineau/intlayer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.mts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs"
    },
    "./augmentation": {
      "types": "./dist/esm/augmentation.d.mts",
      "require": "./dist/cjs/augmentation.cjs",
      "import": "./dist/esm/augmentation.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "src/index.ts",
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist",
    "./src",
    "./bin",
    "./package.json"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --fix",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "serve": "webpack serve --config ./webpack.config.ts",
    "transpile": "webpack --config ./webpack.config.ts",
    "typecheck": "tsup--project ./tsconfig.json --noEmit",
    "watch": "webpack --config ./webpack.config.ts --watch"
  },
  "dependencies": {
    "@intlayer/config": "workspace:^",
    "@intlayer/core": "workspace:^",
    "intlayer": "workspace:^",
    "webpack": "^5.91.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@types/node": "^20.12.7",
    "@utils/eslint-config": "workspace:^",
    "@utils/ts-config": "workspace:^",
    "rimraf": "5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=14.18"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  }
}
