{
  "name": "lynx-intlayer",
  "version": "6.1.6",
  "private": false,
  "description": "A Lynx plugin for seamless internationalization (i18n) and localization (l10n) of your mobile app.",
  "keywords": [
    "intlayer",
    "data",
    "internationalization",
    "multilingual",
    "i18n",
    "typescript",
    "react",
    "lynx",
    "json"
  ],
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs"
    },
    "./plugin": {
      "types": "./dist/types/plugin/index.d.ts",
      "require": "./dist/cjs/plugin/index.cjs",
      "import": "./dist/esm/plugin/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types/index.d.ts"
      ],
      "plugin": [
        "./dist/types/plugin/index.d.ts"
      ],
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "bun clean & bun build:ci",
    "build:ci": "bun build:package & bun build:types",
    "build:package": "tsup",
    "build:types": "tsc --project ./tsconfig.types.json && tsc-alias --project ./tsconfig.types.json",
    "clean": "rimraf ./dist",
    "dev": "concurrently --prefix none \"tsup --watch\" \"tsc --project ./tsconfig.types.json --watch\" \"tsc-alias --project ./tsconfig.types.json --watch\"",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format . --check",
    "format:fix": "biome format --write .",
    "prepublish": "cp -f ../../README.md ./README.md",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsup --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@intlayer/chokidar": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.2.16",
    "@types/node": "^24.7.2",
    "@utils/ts-config": "workspace:*",
    "@utils/ts-config-types": "workspace:*",
    "@utils/tsup-config": "workspace:*",
    "concurrently": "^9.2.1",
    "expo": "^54.0.12",
    "metro-resolver": "^0.82.0",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@intlayer/chokidar": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@lynx-js/rspeedy": "^0.8.2",
    "@rsbuild/core": "^1.2.16"
  },
  "engines": {
    "node": ">=14.18"
  },
  "bug": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  }
}
