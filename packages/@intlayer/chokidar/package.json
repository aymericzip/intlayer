{
  "name": "@intlayer/chokidar",
  "version": "2.0.4",
  "private": false,
  "description": "Chokidar application for IntLayer - Transpile IntLayer declaration files into dictionaries.",
  "keywords": [
    "intlayer",
    "chokidar",
    "application",
    "transpile",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "homepage": "https://github.com/aypineau/intlayer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aypineau/intlayer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.mts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "src/index.ts",
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --fix",
    "prettier:fix": "prettier --write src/**/*"
  },
  "dependencies": {
    "@intlayer/config": "workspace:^",
    "@intlayer/core": "workspace:^",
    "chokidar": "^3.6.0",
    "crypto-js": "^4.2.0",
    "esbuild": "^0.20.2",
    "esbuild-loader": "^4.2.0",
    "glob": "^10.4.2",
    "intlayer": "workspace:^",
    "node-loader": "^2.0.0",
    "quicktype-core": "^23.0.170",
    "rimraf": "5.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.14.9",
    "@utils/eslint-config": "workspace:^",
    "@utils/ts-config": "workspace:^",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "webpack-watch-files-plugin": "^1.2.1"
  },
  "engines": {
    "node": ">=14.18"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  }
}
