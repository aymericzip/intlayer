{
  "name": "@intlayer/core",
  "version": "2.0.4",
  "private": false,
  "description": "IntLayer - Layer of abstraction between the business logic and the data access layer. Manage internationalization in a simple way, through TypeScript, JavaScript or JSON declaration file.",
  "keywords": [
    "intlayer",
    "layer",
    "abstraction",
    "data",
    "internationalization",
    "i18n",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "homepage": "https://github.com/aypineau/intlayer",
  "bugs": {
    "url": "https://github.com/aypineau/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aypineau/intlayer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.mts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./src/index.ts",
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --fix",
    "prettier:fix": "prettier --write src/**/*",
    "process-files": "ts-node src/transpiler/processFilesCLI.ts --dir $npm_config_dir --extension $npm_config_extension --no-node-snapshot",
    "test": "",
    "typecheck": "tsup--project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@intlayer/config": "workspace:^",
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@utils/eslint-config": "workspace:^",
    "@utils/ts-config": "workspace:^",
    "react": "^18.3.1",
    "rimraf": "5.0.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  }
}
