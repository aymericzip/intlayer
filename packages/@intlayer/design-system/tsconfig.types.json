{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@utils/ts-config-types",
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["**/*.test.*", "**/*.stories.*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/types",
    "baseUrl": "src",
    "isolatedModules": false,
    "isolatedDeclarations": false,
    "types": ["react", "node"],
    "preserveSymlinks": true
  }
}
