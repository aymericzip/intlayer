{
  "name": "@intlayer/design-system",
  "version": "7.0.9",
  "private": false,
  "description": "Intlayer design system, including UI components used in the Intlayer editor, website, and visual editor/CMS.",
  "keywords": [
    "design-system",
    "intlayer",
    "react",
    "ui"
  ],
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/components/index.d.ts",
      "import": "./dist/esm/components/index.mjs"
    },
    "./*": {
      "types": "./dist/types/components/*/index.d.ts",
      "import": "./dist/esm/components/*/index.mjs"
    },
    "./hooks": {
      "types": "./dist/types/hooks/index.d.ts",
      "import": "./dist/esm/hooks/index.mjs"
    },
    "./providers": {
      "types": "./dist/types/providers/index.d.ts",
      "import": "./dist/esm/providers/index.mjs"
    },
    "./libs": {
      "types": "./dist/types/libs/index.d.ts",
      "import": "./dist/esm/libs/index.mjs"
    },
    "./tailwind-config": {
      "types": "./dist/types/tailwind.config.d.ts",
      "import": "./dist/esm/tailwind.config.mjs"
    },
    "./css": "./tailwind.css",
    "./tw-source.css": "./tw-source.css",
    "./css-output": "./dist/tailwind.css",
    "./package.json": "./package.json"
  },
  "module": "dist/esm/components/index.mjs",
  "types": "dist/types/components/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "tailwind.css",
    "tw-source.css"
  ],
  "scripts": {
    "build": "tsdown --config tsdown.config.ts",
    "build:ci": "tsdown --config tsdown.config.ts",
    "build:css": "npx tailwindcss --minify -i ./tailwind.css -o ./dist/tailwind.css",
    "build:intlayer": "intlayer build",
    "build:package": "tsdown --config tsdown.config.ts",
    "build:storybook": "storybook build",
    "check:storybook": "npx storybook doctor",
    "clean": "rimraf ./dist .turbo",
    "dev": "tsdown --config tsdown.config.ts --watch",
    "format": "biome format . --check",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "preview": "vite preview",
    "preview:storybook": "storybook preview",
    "start": "bun storybook -p 6006 --no-open --host 0.0.0.0",
    "start:serve": "npx http-server -y storybook-static -p 6006 -o --no-open",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "",
    "typecheck_": "tsc --noEmit --project tsconfig.types.json"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@intlayer/api": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@intlayer/dictionaries-entry": "workspace:*",
    "@intlayer/editor-react": "workspace:*",
    "@intlayer/types": "workspace:*",
    "@monaco-editor/react": "4.7.0",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-toast": "1.2.15",
    "@shikijs/transformers": "3.15.0",
    "@tanstack/react-query": "5.90.8",
    "@tanstack/react-query-devtools": "5.90.2",
    "better-auth": "1.3.34",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "framer-motion": "12.23.24",
    "fuse.js": "7.1.0",
    "intlayer": "workspace:*",
    "react-hook-form": "7.66.0",
    "react-intlayer": "workspace:*",
    "rollup-preserve-directives": "1.1.3",
    "shiki": "3.15.0",
    "tailwind-merge": "3.4.0",
    "zod": "4.1.12",
    "zustand": "4.5.7"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.2",
    "@intlayer/backend": "workspace:*",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/addon-onboarding": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/builder-vite": "8.6.14",
    "@storybook/manager-api": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "@storybook/theming": "8.6.14",
    "@svgr/core": "^8.1.0",
    "@svgr/rollup": "^8.1.0",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/cli": "4.1.17",
    "@tailwindcss/vite": "4.1.17",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/espree": "10.1.0",
    "@types/node": "24.10.1",
    "@types/react": "19.2.4",
    "@types/react-dom": "19.2.3",
    "@utils/ts-config": "workspace:*",
    "@utils/ts-config-types": "workspace:*",
    "fast-glob": "3.3.3",
    "lucide-react": "0.553.0",
    "rimraf": "6.1.0",
    "storybook": "8.6.14",
    "tailwindcss": "4.1.17",
    "tsdown": "0.16.3",
    "typescript": "5.9.3",
    "vite-intlayer": "workspace:*",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.8"
  },
  "peerDependencies": {
    "@better-fetch/fetch": "1.1.18",
    "@intlayer/api": "workspace:*",
    "@intlayer/backend": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@intlayer/dictionaries-entry": "workspace:*",
    "@intlayer/editor-react": "workspace:*",
    "@intlayer/types": "workspace:*",
    "@monaco-editor/react": "4.7.0",
    "@tanstack/react-query": "5.90.8",
    "clsx": "2.1.1",
    "framer-motion": "12.23.24",
    "fuse.js": "7.1.0",
    "intlayer": "workspace:*",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0",
    "react-intlayer": "workspace:*",
    "tailwind-merge": "3.4.0",
    "zustand": "4.5.7"
  }
}
