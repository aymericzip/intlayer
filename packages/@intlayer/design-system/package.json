{
  "name": "@intlayer/design-system",
  "version": "2.0.13",
  "private": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/components/index.es.js",
      "require": "./dist/components/index.cjs.js",
      "types": "./dist/components/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.es.js",
      "require": "./dist/hooks/index.cjs.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./libs": {
      "import": "./dist/libs/index.es.js",
      "require": "./dist/libs/index.cjs.js",
      "types": "./dist/libs/index.d.ts"
    },
    "./tailwind-config": {
      "import": "./tailwind.config.js",
      "require": "./tailwind.config.js",
      "types": "./tailwind.config.d.ts"
    },
    "./css": "./dist/tailwind.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:package && pnpm build:css && pnpm build:storybook",
    "build:css": "tailwindcss --minify -i ./src/tailwind.css -o ./dist/tailwind.css",
    "build:package": "vite build",
    "build:storybook": "storybook build",
    "dev": "vite build --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "framer-motion": "^11.2.12",
    "markdown-to-jsx": "^7.4.7",
    "react-copy-to-clipboard": "^5.1.0",
    "react-hook-form": "^7.53.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rollup-preserve-directives": "^1.1.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.8.0",
    "@intlayer/backend": "workspace:^",
    "@intlayer/dictionaries-entry": "workspace:^",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/espree": "^10.1.0",
    "@types/react": "^18.3.3",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@utils/ts-config": "workspace:^",
    "@vitejs/plugin-react": "^4.3.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^9.1.3",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "glob": "^10.4.2",
    "lucide-react": "^0.441.0",
    "prettier": "3.3.3",
    "storybook": "^8.2.9",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-babel-macros": "^1.0.6",
    "vite-plugin-dts": "^3.9.1"
  },
  "peerDependencies": {
    "@intlayer/config": "workspace:^",
    "@intlayer/core": "workspace:^",
    "@intlayer/dictionaries-entry": "workspace:^",
    "intlayer": "workspace:^",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intlayer": "workspace:^",
    "zustand": "^4.5.2"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components",
      "styled": {
        "import": "styled",
        "from": "styled-components"
      }
    }
  }
}
