{
  "name": "@intlayer/webpack",
  "version": "0.0.0",
  "private": false,
  "description": "Webpack application for IntLayer - Webpack process to transpile TypeScript files to JavaScript files into IntLayer dictionaries.",
  "keywords": [
    "intlayer",
    "webpack",
    "application",
    "transpile",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "homepage": "https://github.com/aypineau/intlayer",
  "repository": {
    "type": "git",
    "url": "https://github.com/aypineau/intlayer"
  },
  "license": "MIT",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aypineau"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "src/index.ts",
  "typesVersions": {
    "*": {
      "package.json": [
        "./package.json"
      ]
    }
  },
  "files": [
    "./dist",
    "./src",
    "./bin",
    "./package.json"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs --fix",
    "prettier:fix": "prettier --write src/**/*",
    "serve": "webpack serve --config ./webpack.config.ts",
    "transpile": "webpack --config ./webpack.config.ts",
    "typecheck": "tsup--project ./tsconfig.json --noEmit",
    "watch": "webpack --config ./webpack.config.ts --watch"
  },
  "dependencies": {
    "@intlayer/cli": "workspace:^",
    "@intlayer/config": "workspace:^",
    "@intlayer/core": "workspace:^",
    "@swc-node/register": "^1.9.0",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@swc/register": "^0.1.10",
    "@swc/types": "^0.1.6",
    "@swc/wasm": "^1.4.11",
    "crypto-js": "^4.2.0",
    "glob": "^10.3.10",
    "node-loader": "^2.0.0",
    "rimraf": "5.0.5",
    "swc-loader": "^0.2.6",
    "ts-loader": "^9.5.1",
    "util": "^0.12.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.8",
    "@types/webpack-watch-files-plugin": "^1.1.3",
    "@types/yargs": "^17.0.32",
    "@utils/eslint-config": "workspace:^",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "webpack-watch-files-plugin": "^1.2.1"
  },
  "engines": {
    "node": ">=14.18"
  },
  "bug": {
    "url": "https://github.com/aypineau/intlayer/issues"
  }
}
