{
  "name": "intlayer-monorepo",
  "version": "1.00.0",
  "private": false,
  "description": "IntLayer monorepo - Layer of abstraction between the business logic and the data access layer. Manage internationalization in a simple way, through TypeScript, JavaScript or JSON declaration file.",
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm build-packages && pnpm build-examples",
    "build-backend": "pnpm build-packages && pnpm --filter './apps/backend' build",
    "build-examples": "pnpm --filter './examples/**' build",
    "build-packages": "pnpm --filter './packages/@intlayer/config' build && pnpm --filter './packages/@intlayer/core' build && pnpm --filter './packages/intlayer' build && pnpm --filter './packages/@intlayer/dictionaries-entry' build && pnpm --filter './packages/@intlayer/chokidar' build && pnpm --filter './packages/express-intlayer' build && pnpm --filter './apps/backend' build && pnpm --filter './packages/@intlayer/design-system' build && pnpm --filter './packages/@intlayer/cli' build && pnpm --filter './packages/@intlayer/webpack' build && pnpm --filter './packages/react-intlayer' build && pnpm --filter './packages/next-intlayer' build && pnpm --filter './packages/intlayer-cli' build && pnpm --filter './packages/intlayer-editor' build",
    "build-website": "pnpm build-packages && pnpm --filter './apps/website' build",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "pnpm recursive clean --parallel --filter './packages/**'",
    "clean:dist": "rimraf node_modules ./**/node_modules",
    "clean:examples": "pnpm --filter './examples/**' clean",
    "clean:node_modules": "rimraf node_modules ./**/node_modules",
    "clean:packages": "pnpm --filter './packages/**' clean",
    "dev": "node ./scripts/dev-pick.mjs",
    "lint": "eslint . --cache",
    "lint-staged": "lint-staged --allow-empty",
    "lint:fix": "eslint . --cache --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run test",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "reset": "pnpm reset-packages && pnpm add -f && pnpm reset-examples",
    "reset-examples": "pnpm clean:examples && pnpm build-examples",
    "reset-packages": "pnpm clean:packages && pnpm build-packages",
    "test": "pnpm recursive test --parallel",
    "test-packages": "pnpm recursive test --parallel --filter './packages/**'",
    "typecheck": "tsup --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.10",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@utils/eslint-config": "workspace:^",
    "@utils/ts-config": "workspace:^",
    "@utils/ts-config-types": "workspace:^",
    "@utils/tsup-config": "workspace:^",
    "@vitejs/plugin-react": "^4.3.4",
    "enquirer": "^2.4.1",
    "eslint": "^9.16.0",
    "fast-glob": "^3.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "next": "14.2.21",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.7"
  },
  "packageManager": "pnpm@9.14.3",
  "engines": {
    "node": ">=16.0.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=9.0.0",
    "yarn": "please-use-pnpm"
  },
  "bug": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  }
}
