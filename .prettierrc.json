{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-packagejson"],
  "includes": ["**/package.json", "**/*.md"],
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "bracketSameLine": false,
  "useTabs": false,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    },
    {
      "files": "package.json",
      "options": {
        "plugins": ["prettier-plugin-packagejson"]
      }
    }
  ]
}
