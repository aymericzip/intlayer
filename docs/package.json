{
  "name": "@intlayer/docs",
  "version": "3.5.3",
  "private": true,
  "description": "IntLayer documentation",
  "keywords": [
    "intlayer",
    "documentation",
    "application",
    "typescript",
    "javascript",
    "json",
    "file"
  ],
  "homepage": "https://intlayer.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./src/types/index.d.ts",
      "require": "./src/cjs/index.cjs",
      "import": "./src/esm/index.mjs"
    }
  },
  "main": "./src/cjs/index.cjs",
  "module": "./src/mjs/index.mjs",
  "files": [
    "src/esm/*",
    "src/cjs/*",
    "src/types/*",
    "ar/*",
    "de/*",
    "en/*",
    "en-GB/*",
    "es/*",
    "fr/*",
    "hi/*",
    "it/*",
    "ja/*",
    "ko/*",
    "pt/*",
    "ru/*",
    "zh/*"
  ],
  "scripts": {
    "build": "pnpm build:docEntries & pnpm build:package & pnpm build:types",
    "build:docEntries": "node --import=tsx ./src/ts/formatAllEntries.ts",
    "build:package": "tsup",
    "build:types": "tsc --project ./tsconfig.types.json && tsc-alias --project ./tsconfig.types.json",
    "clean": "rimraf ./src/cjs ./src/esm",
    "dev": "concurrently --prefix none \"tsup --watch\" \"tsc --project ./tsconfig.types.json --watch\" \"tsc-alias --project ./tsconfig.types.json --watch\"",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "test": "",
    "translate": "node ./src/cjs/translate.cjs"
  },
  "dependencies": {
    "@intlayer/config": "workspace:^"
  },
  "devDependencies": {
    "@intlayer/core": "workspace:^",
    "@types/node": "^22.9.0",
    "@utils/ts-config": "workspace:^",
    "@utils/ts-config-types": "workspace:^",
    "@utils/tsup-config": "workspace:^",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "fast-glob": "^3.3.2",
    "openai": "^4.76.1",
    "p-limit": "^3.1.0",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=14.18"
  },
  "bug": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  }
}
